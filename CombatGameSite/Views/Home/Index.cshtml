@{
    Layout = "_LayoutBare";
    ViewData["Title"] = "Combat Game Site";
}

<ul>
    <li>
        <a asp-controller="Home" asp-action="Battle">
            Fight
        </a>
    </li>
    <li>
        <a asp-controller="Home" asp-action="Leaderboard">
            Leaderboard
        </a>
    </li>
    @if (Model.CurrentUser == null)
    {
        <li>
            <a asp-area="Account" asp-controller="Account" asp-action="Login">
                Login
            </a>
        </li>
        <li>
            <a asp-area="Account" asp-controller="Account" asp-action="Register">
                Register
            </a>
        </li>
    }
    else
    {
        <li>
            <a asp-controller="User" asp-action="Combatants" asp-route-id="@Model.CurrentUser.Id">
                Combatants
            </a>
        </li>
        <li>
            <a asp-controller="User" asp-action="Teams" asp-route-id="@Model.CurrentUser.Id">
                Teams
            </a>
        </li>
        <li>
            <form asp-area="Account" asp-controller="Account" asp-action="Logout" method="post">
                <input type="submit" value="Logout" />
            </form>
        </li>
    }
</ul>
