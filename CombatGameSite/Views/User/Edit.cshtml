@model UserEditViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Profile";
}
<div class="row">
    <h1 class="heading d-flex justify-content-center align-items-center p-0">Edit Profile</h1>
</div>

<form asp-action="Edit" method="post" class="col-md-4 offset-md-4 wooden-form p-5">
    <div asp-validation-summary="All" class="mb-3"></div>
    <div class="mb-3">
        <label asp-for="User.Tagline" class="form-label">
            Tagline
        </label>
        <input asp-for="User.Tagline" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="User.FavoriteBook" class="form-label">
            Favorite Book
        </label>
        <input asp-for="User.FavoriteBook" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="User.FavoriteGame" class="form-label">
            Favorite Game
        </label>
        <input asp-for="User.FavoriteGame" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="User.FavoriteMovie" class="form-label">
            Favorite Movie
        </label>
        <input asp-for="User.FavoriteMovie" class="form-control" />
    </div>
    <div class="text-center">
        <input type="submit" value="Save" class="button d-inline-block p-3" />
        <a asp-controller="User" asp-action="Characters" asp-route-id="@Model.CurrentUser.Id" class="button d-inline-block p-3">Cancel</a>
    </div>
</form>
