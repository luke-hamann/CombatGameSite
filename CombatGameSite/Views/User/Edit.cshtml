@model UserEditViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Profile";
}

<h1 class="heading text-center">@ViewData["Title"]</h1>

<form asp-action="Edit" method="post" class="col-md-4 offset-md-4 wooden-form p-5" autocomplete="off">
    <div asp-validation-summary="All" class="mb-3"></div>
    <div class="mb-3">
        <label asp-for="User.Tagline" class="form-label">Tagline</label>
        <input asp-for="User.Tagline" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="User.FavoriteBook" class="form-label">Favorite Book</label>
        <input asp-for="User.FavoriteBook" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="User.FavoriteGame" class="form-label">Favorite Game</label>
        <input asp-for="User.FavoriteGame" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="User.FavoriteMovie" class="form-label">Favorite Movie</label>
        <input asp-for="User.FavoriteMovie" class="form-control" />
    </div>
    <div class="mb-3 text-center">
        <input type="submit" value="Save" class="button d-inline-block p-3" />
        <a asp-controller="User" asp-action="Index" asp-route-id="@Model.CurrentUser!.Id" class="button d-inline-block p-3 ms-2">Cancel</a>
    </div>
</form>
