@model CharacterEditViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Mode + " Character";
}

<h1>
    @ViewData["Title"]
</h1>

<form asp-controller="Character" asp-action="@Model.Mode" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        You can distribute no more than @Character.MAX_SKILL_POINTS skill points.
    </div>
    <div>
        <label asp-for="@Model.Character.Name">
            Name
        </label>
        <input asp-for="@Model.Character.Name" />
    </div>
    <div>
        <label asp-for="@Model.Character.Health">
            Health
        </label>
        <input asp-for="@Model.Character.Health" />
    </div>
    <div>
        <label asp-for="@Model.Character.TypeId">
            Type
        </label>
        <select asp-for="@Model.Character.TypeId">
            <option value="0">-</option>
            <option value="1">Water</option>
            <option value="2">Fire</option>
            <option value="3">Wind</option>
            <option value="4">Earth</option>
        </select>
    </div>
    <div>
        <label asp-for="@Model.Character.Defense">
            Defense
        </label>
        <input asp-for="@Model.Character.Defense" />
    </div>
    <div>
        <label asp-for="@Model.Character.Species">
            Species
        </label>
        <input asp-for="@Model.Character.Species" />
    </div>
    <div>
        <label asp-for="@Model.Character.SkillPrimaryId">
            Primary Skill
        </label>
        <select asp-for="@Model.Character.SkillPrimaryId">
            <option value="">-</option>
            @foreach (Skill skill in Model.Skills)
            {
                <option value="@skill.Id">
                    @skill.Name | $@skill.Cost | @skill.Description
                </option>
            }
        </select>
    </div>
    <div>
        <label asp-for="@Model.Character.SkillSecondaryId">
            Secondary Skill
        </label>
        <select asp-for="@Model.Character.SkillSecondaryId">
            <option value="">-</option>
            @foreach (Skill skill in Model.Skills)
            {
                <option value="@skill.Id">
                    @skill.Name | $@skill.Cost | @skill.Description
                </option>
            }
        </select>
    </div>
    <div>
        <label asp-for="@Model.Character.SkillTertiaryId">
            Tertiary Skill
        </label>
        <select asp-for="@Model.Character.SkillTertiaryId">
            <option value="">-</option>
            @foreach (Skill skill in Model.Skills)
            {
                <option value="@skill.Id">
                    @skill.Name | $@skill.Cost | @skill.Description
                </option>
            }
        </select>
    </div>
    <div>
        <input type="submit" value="Submit" />
        @if (Model.Mode == "Edit")
        {
            <a asp-controller="Character" asp-action="Index" asp-route-id="@Model.Character.Id">
                Cancel
            </a>
        }
    </div>
</form>
