@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>
    Login
</h1>

<form asp-action="Login" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Name">
            Username
        </label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Password">
            Password
        </label>
        <input type="password" asp-for="Password" />
    </div>
    <div>
        <input type="submit" value="Login" />
    </div>
</form>
