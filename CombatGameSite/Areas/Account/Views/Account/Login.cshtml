@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form asp-area="Account" asp-controller="Account" asp-action="Login" method="post">
    <div asp-validation-for="All"></div>
    <div>
        <label asp-for="Name">
            Username
        </label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Password">
            Password
        </label>
        <input asp-for="Password" />
    </div>
    <div>
        <input type="submit" value="Login" />
    </div>
</form>
